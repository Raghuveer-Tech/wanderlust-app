<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show d-flex align-items-center col-6 offset-3" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <div><%= success %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center col-6 offset-3" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div><%= error %></div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

