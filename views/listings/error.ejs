<% layout("/layouts/boilerplate.ejs") -%>

<!-- SVG icon definition (required for alert icon) -->
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 
    1.767.982 1.767h13.707c.89 0 1.438-.99.982-1.767L8.982 
    1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 
    0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 
    5zm.002 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
  </symbol>
</svg>

<!-- Simple Alert Box -->
<div class="alert alert-danger d-flex align-items-center mt-4" role="alert">
  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:">
    <use xlink:href="#exclamation-triangle-fill"/>
  </svg>
  <div>
    <p><strong>Error:</strong> <%= err.message || "Something went wrong!" %></p>
    <p><strong>Status:</strong> <%= err.statusCode || 500 %></p>
    <p><%= err.stack %></p>
    <a href="/" class=" btn add-btn  rounded-pill text-center mb-2" style="text-decoration: none;">Go Back Home</a>
  </div>
</div>
